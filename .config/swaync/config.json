{
  "$schema": "$XDG_CONFIG_HOME/swaync/configSchema.json",
  "control-center-height": 2,
  "control-center-layer": "overlay",
  "control-center-margin-bottom": 500,
  "control-center-margin-left": 0,
  "control-center-margin-right": 0,
  "control-center-margin-top": 0,
  "control-center-width": 600,
  "cssPriority": "application",
  "control-center-positionX":"center",
  "control-center-positionY":"center",
  "fit-to-screen": true,
  "hide-on-action": true,
  "hide-on-clear": true,
  "image-visibility": "when-available",
  "keyboard-shortcuts": true,
  "layer": "layer",
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "notification-icon-size": 20,
  "notification-inline-replies": true,
  "notification-visibility": {},
  "notification-window-width": 400,
  "positionX": "center",
  "positionY": "top",
  "script-fail-notify": true,
  "scripts": {},
  "timeout": 4,
  "timeout-critical": 4,
  "timeout-low": 2,
  "transition-time": 100,
  "widget-config": {
    "buttons-grid": {
      "actions": [
        {
          "label": "󰀝",
          "type": "toggle",
          "active": false,
          "command": "sh -c $HOME/.config/hypr/scripts/misc/airplaneMode.sh"
        },

        { 
          "label": "",
          "type": "button",
          "command": "sh -c 'swaync-client -cp && $HOME/.config/hypr/scripts/display/screenShot.sh --area'"
        },
        {
          "label": "",
          "type": "button",
          "command": "sh -c $HOME/.config/hypr/scripts/display/screenShot.sh"
        },
        { 
          "label": "",
          "type": "toggle",
          "active": false,
          "command": "sh -c 'swaync-client -d'"
        },
        { 
          "label": "󰒳",
          "type": "toggle",
          "active": false,
          "command": "sh -c $HOME/.config/hypr/scripts/display/hypridle.sh"
        },
        { 
          "label": "󰃢",
          "type": "button",
          "command": "sh -c 'swaync-client -C'"
        }


      ]
    },
    "mpris": {
      "image-radius": 12,
      "image-size": 96
    },
    "volume": {
      "label": "",
        "show-per-app": true,
        "show-per-app-icon": true,
        "show-per-app-label": true
    }
},

  "widgets": [
    "buttons-grid",
    "mpris",
    "notifications",
    "volume"
  ]
}
